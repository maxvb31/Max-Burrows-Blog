---
import { getAllPosts } from '../sanity/api.js';
import { urlForImage } from '../sanity/urlForImage.js';

const featuredPosts = await getAllPosts(true);
const allPosts = await getAllPosts();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
    <style>
      body {
        font-family: system-ui;
      }
      main {
        margin: 0 auto;
        padding: 0 20px; /* Add some padding to the sides */
        max-width: 900px;
      }
      ul {
        list-style: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        display: flex;
        flex-direction: column;
        margin-bottom: 1rem;
        text-align: center; /* Center text */
      }
      ul li a {
        text-decoration: none;
        color: inherit;
      }
      ul li a:hover {
        text-decoration: underline;
      }
      .featured-post-image {
        width: 100%; /* Set the width to fill the container */
        max-width: 900px; /* Limit width to 900px */
        display: block;
        margin: 0 auto;
      }
      .all-posts {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Responsive layout */
        grid-gap: 20px;
        margin-top: 20px; /* Add some space between sections */
      }
      .all-posts li {
        list-style: none;
      }
      .all-posts img {
        width: 100%;
        height: 250px;
        object-fit: cover;
      }
      .all-posts-section{
        margin-top: 2.2rem;
      }
      .section-headers{
        font-size: 2rem;
      }

  .image-container {
    position: relative; /* Required for positioning the overlay */
    width: 100%;
    max-width: 900px; /* Limit width to 900px */
    display: block;
    margin: 0 auto;
  }

  .overlay {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* Grey overlay with 50% opacity */
    opacity: 0; /* Initially transparent */
    transition: opacity 0.3s ease; /* Smooth transition */
    z-index: 2; /* Ensure the overlay is above the image */
  }

  .image-container:hover .overlay {
    opacity: 1; /* Fully visible on hover */
  }

  .all-posts-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }
      

      /* Media query for mobile devices */
      @media (max-width: 600px) {
        .featured-post-image {
          max-width: 100%; /* Ensure the featured image doesn't overflow */
        }
        .all-posts {
          grid-template-columns: repeat(1, 1fr); /* Change to single column for mobile */
        }
      }
      
    </style>
	</head>
	<body>
    <main>
      <section>
        <h2 class="section-headers">Featured Posts</h2>
        <ul>
          {featuredPosts.map(post => (
            <li>
              <a href={`/posts/${post.slug.current}`}>
                <div class="image-container">
                  <img
                    src={urlForImage(post.mainImage).url()}
                    class="featured-post-image"
                  />
                  <div class="overlay"></div> <!-- Overlay -->
                </div>
              </a>
              <div>
                <a href={`/posts/${post.slug.current}`}>
                  {post.title}
                </a>
              </div>
            </li>
          ))}
        </ul>
        <section class="all-posts-section">
          <h2 class="section-headers">All Posts</h2>
          <ul class="all-posts">
            {allPosts.map(post => (
              <li>
                <a href={`/posts/${post.slug.current}`}>
                  <div class="image-container"> <!-- Add image container -->
                    <img
                      src={urlForImage(post.mainImage).url()}
                      class="all-posts-image" 
                    />
                    <div class="overlay"></div> <!-- Overlay -->
                  </div>
                  <div>
                    <a href={`/posts/${post.slug.current}`}>
                      {post.title}
                    </a>
                  </div>
                </a>
              </li>
            ))}
          </ul>
        </section>
    </main>
	</body>
</html>